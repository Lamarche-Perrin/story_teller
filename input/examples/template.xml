<NARRATION START="hello">

  <TEMPLATE ID="ALT_SITUATION">
	<ATTRIBUTE ID="ID"/>
	<BALISE ID="PROBABILITY1" DEFAULT="100"/>
	<BALISE ID="PROBABILITY2" DEFAULT="100"/>
	<BALISE ID="CONTENT1" DEFAULT=""/>
	<BALISE ID="CONTENT2" DEFAULT=""/>

	<CONTENT>

	  <SITUATION ID="[ID]">
		<CONTENT>
		  <START ID="[ID].aux"/>
		</CONTENT>
	  </SITUATION>

	  <SITUATION ID="[ID].aux"/>

	  <TRANSITION FROM="[ID].aux" TO="[ID].aux.first">
		<PROBABILITY>[PROBABILITY1]</PROBABILITY>
	  </TRANSITION>

	  <TRANSITION FROM="[ID].aux" TO="[ID].aux.second">
		<PROBABILITY>[PROBABILITY2]</PROBABILITY>
	  </TRANSITION>

	  <SITUATION ID="[ID].aux.first">
		<CONTENT>
		  [CONTENT1]
		  <END/>
		</CONTENT>
	  </SITUATION>

	  <SITUATION ID="[ID].aux.second">
		<CONTENT>
		  [CONTENT2]
		  <END/>
		</CONTENT>
	  </SITUATION>

	</CONTENT>
  </TEMPLATE>

  <ALT_SITUATION ID="hello">
	<CONTENT1><PRINT>Hello...</PRINT></CONTENT1>
	<CONTENT2><PRINT>Good morning...</PRINT></CONTENT2>
  </ALT_SITUATION>

  <TRANSITION FROM="hello" TO="world"/>

  <ALT_SITUATION ID="world">
	<PROBABILITY1>200</PROBABILITY1>
	<CONTENT1><PRINT>...world!</PRINT></CONTENT1>
	<CONTENT2><PRINT>...universe!</PRINT></CONTENT2>
  </ALT_SITUATION>

  <TRANSITION FROM="world" TO="end"/>

  <SITUATION ID="end">
	<CONTENT><END/></CONTENT>
  </SITUATION>

</NARRATION>
