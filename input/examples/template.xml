<NARRATION START="hello">

  <TEMPLATE ID="ALT_SITUATION">
	<ATTRIBUTE ID="ID"/>
	<BALISE ID="PROBABILITY1" DEFAULT="100"/>
	<BALISE ID="PROBABILITY2" DEFAULT="100"/>
	<BALISE ID="CONTENT1" DEFAULT=""/>
	<BALISE ID="CONTENT2" DEFAULT=""/>

	<CONTENT>
	  <SITUATION ID="[ID]"/>
	  <TRANSITION FROM="[ID]" TO="[ID].FIRST"/>
	  <TRANSITION FROM="[ID]" TO="[ID].SECOND"/>

	  <SITUATION ID="[ID].FIRST">
		<PROBABILITY>[PROBABILITY1]</PROBABILITY>
		<CONTENT>[CONTENT1]</CONTENT>
	  </SITUATION>

	  <SITUATION ID="[ID].SECOND">
		<PROBABILITY>[PROBABILITY2]</PROBABILITY>
		<CONTENT>[CONTENT2]</CONTENT>
	  </SITUATION>

	  <TRANSITION FROM="[ID].FIRST" TO=""/>
	  <TRANSITION FROM="[ID].SECOND" TO=""/>
	  <SITUATION ID=""/>

	</CONTENT>
  </TEMPLATE>

  <ALT_SITUATION ID="hello">
	<CONTENT1>
	  <PRINT>Hello...</PRINT>
	</CONTENT1>
	<CONTENT2>
	  <PRINT>Good morning...</PRINT>
	</CONTENT2>
  </ALT_SITUATION>

  <TRANSITION FROM="hello" TO="world"/>

  <ALT_SITUATION ID="world">
	<CONTENT1>
	  <PRINT>...world!</PRINT>
	  <END/>
	</CONTENT1>
	<CONTENT2>
	  <PRINT>...universe!</PRINT>
	  <END/>
	</CONTENT2>
  </ALT_SITUATION>

</NARRATION>
